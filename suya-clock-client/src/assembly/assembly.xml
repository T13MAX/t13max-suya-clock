<assembly>
<id>assembly</id>
<formats>
    <format>zip</format>
</formats>
<includeBaseDirectory>false</includeBaseDirectory>
<fileSets>
    <fileSet>
        <directory>../suya-clock/</directory>
        <includes>
            <include>*.sh</include>
            <include>*.bat</include>
        </includes>
        <outputDirectory>./suya-clock</outputDirectory>
        <fileMode>0755</fileMode>
    </fileSet>
    <fileSet>
        <directory>../suya-clock/</directory>
        <includes>
            <include>jdk/**/*</include>
        </includes>
        <outputDirectory>./suya-clock</outputDirectory>
    </fileSet>
    <fileSet>
        <directory>../suya-clock/</directory>
        <includes>
            <include>*.txt</include>
            <include>*.json</include>
        </includes>
        <outputDirectory>./suya-clock</outputDirectory>
    </fileSet>
</fileSets>
<files>
    <file>
        <source>target/${project.artifactId}-${project.version}.jar</source>
        <outputDirectory>./suya-clock/libs</outputDirectory>
    </file>
</files>
<dependencySets>
    <dependencySet>
        <unpack>false</unpack>
        <scope>runtime</scope>
        <outputDirectory>./suya-clock/libs</outputDirectory>
    </dependencySet>
</dependencySets>
</assembly>